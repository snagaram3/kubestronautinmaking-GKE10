apiVersion: apps/v1
kind: Deployment
metadata:
  name: a2a-orchestrator
  namespace: ai-agents
  labels:
    app: a2a-orchestrator
    component: ai-orchestrator
spec:
  replicas: 1
  selector:
    matchLabels:
      app: a2a-orchestrator
  template:
    metadata:
      labels:
        app: a2a-orchestrator
        component: ai-orchestrator
    spec:
      containers:
      - name: a2a-orchestrator
        image: gcr.io/hackgkfinalv1/a2a-orchestrator:hackathon
        ports:
        - containerPort: 8081
          name: http
        env:
        - name: GEMINI_API_KEY
          valueFrom:
            secretKeyRef:
              name: ai-secrets
              key: GEMINI_API_KEY
        - name: PORT
          value: "8081"
        resources:
          requests:
            cpu: 200m
            memory: 512Mi
          limits:
            cpu: 1000m
            memory: 1Gi
        livenessProbe:
          httpGet:
            path: /status
            port: 8081
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /status
            port: 8081
          initialDelaySeconds: 5
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: a2a-orchestrator
  namespace: ai-agents
  labels:
    app: a2a-orchestrator
spec:
  type: LoadBalancer
  selector:
    app: a2a-orchestrator
  ports:
  - port: 8081
    targetPort: 8081
    name: http